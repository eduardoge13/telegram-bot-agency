{
  "version": 2,
  "builds": [
    {
      "src": "bot_telegram.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/telegram",
      "dest": "bot_telegram.py"
    },
    {
      "src": "/debug",
      "dest": "bot_telegram.py"
    },
    {
      "src": "/",
      "dest": "bot_telegram.py"
    }
  ],
  "functions": {
    "bot_telegram.py": {
      "maxDuration": 30
    }
  },
  "env": {
    "PYTHONUNBUFFERED": "1"
  }
}